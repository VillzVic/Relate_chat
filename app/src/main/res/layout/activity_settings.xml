<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context="com.example.appzonepc2.relate.SettingsActivity">
    <!--settings should contain much more than this, use navigation drawer sef-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilepic"
        android:layout_marginTop="40dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/profileview"/>

    <TextView
        android:id="@+id/username"
        android:layout_below="@+id/profilepic"
        android:layout_centerHorizontal="true"
        android:text="Username"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/userstatus"
        android:layout_below="@+id/username"
        android:layout_centerHorizontal="true"
        android:text="Status"
        android:textStyle="normal"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/changeImage"
        android:layout_above="@id/changeStatus"
        android:layout_alignLeft="@+id/changeStatus"
        android:text="Change Image"
        android:textSize="20sp"
        android:background="@android:color/background_light"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginBottom="10dp"
        android:layout_width="200dp"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/changeStatus"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:textSize="20sp"
        android:background="@android:color/background_light"
        android:text="CHANGE STATUS"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="200dp"
        android:layout_height="50dp" />
</RelativeLayout>
